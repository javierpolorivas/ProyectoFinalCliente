---
// Navbar.astro
const navLinks = [
  { href: "#profile", label: "Inicio" },
  { href: "#studies", label: "Estudios" },
  { href: "#projects", label: "Proyectos" },
  { href: "#skills", label: "Skills" },
  { href: "#experiences", label: "Experiencias" },
  { href: "#references", label: "Referencias" },
  { href: "#contact", label: "Contacto" }
];
---

<header style="background-color: #1f2937;" class="bg-gray-200 text-white shadow-md py-4 fixed top-0 w-full z-20">
  <div class="max-w-7xl mx-auto px-6 flex justify-center">
    <!-- NavegaciÃ³n -->
    <nav>
      <ul class="flex space-x-6 text-sm sm:text-md font-light">
        {navLinks.map((link) => (
          <li>
            <a 
              href={link.href} 
              class="hover:text-gray-900 transition-all duration-300 underline-offset-4 hover:underline">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
