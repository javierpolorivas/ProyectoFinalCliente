---
// Define un tipo para las experiencias
type Experience = {
  name: string | null | undefined; // Ajusta según los valores que esperas
  image: string | null | undefined; // Ajusta según los valores que esperas
};

import ExperienceSection from "../components/ExperienceSection.astro";

const { data, language } = Astro.props;
---
<section id="experiences" class="mt-16 text-center">
  <h2 class="text-3xl font-semibold mb-6">
    {language === 'es' ? 'EXPERIENCIAS' : 'EXPERIENCES'}
  </h2>
  <div class="flex flex-col gap-6 items-center">
    {data.experiences.map((experience: Experience) => (
      <div class="bg-gray-100 shadow-md rounded-lg w-full max-w-4xl flex items-center p-4 shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out transform hover:scale-105 border-2 border-gray-200">
        <img 
          src={experience.image || ''} 
          alt={experience.name || 'No description available'} 
          class="w-24 h-24 object-cover mr-4"
        />
        <div class="flex-1 text-left">
          <h3 class="text-lg font-semibold">{experience.name || 'Unknown'}</h3>
          <p class="text-gray-600 mt-1">
            {language === 'es' ? 'Descripción de la experiencia.' : 'Experience description.'}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>
