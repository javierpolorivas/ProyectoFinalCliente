---
// Define un tipo para las referencias
type Reference = {
  name: string | null | undefined;
  image: string | null | undefined;
  cargo: string | null | undefined;
};

import ExperienceSection from "../components/ReferencesCard.astro";

const { data, language } = Astro.props;
---
<section id="references" class="mt-16 text-center">
  <h2 class="text-3xl font-semibold mb-6">
    {language === 'es' ? 'REFERENCIAS' : 'REFERENCES'}
  </h2>
  <div class="flex flex-wrap justify-center gap-6">
    {data.references.map((reference: Reference) => (
      <div class="bg-gray-100 shadow-md rounded-lg flex flex-col items-center p-6 w-full sm:w-72 md:w-80 lg:w-62 shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out transform hover:scale-105 border-2 border-gray-200">
        <img 
          src={reference.image || ''} 
          alt={reference.name || 'No description available'} 
          class="w-24 h-24 object-cover rounded-full mb-4"
        />
        <h3 class="text-lg font-semibold">{reference.name || 'Unknown'}</h3>
        <h3 class="text-sm font-regular text-gray-600">{reference.cargo || 'Unknown position'}</h3>
      </div>
    ))}
  </div>
</section>
